<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Padding.Default">

    <io.smileyjoe.classscheduler.view.ProfileImage
        android:id="@+id/image_profile"
        app:profile_image_type="view"
        style="@style/Icon.Profile.BottomSheet"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/text_is_attending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_attending"
        android:visibility="gone"
        android:textStyle="italic"
        android:textColor="@color/colorPrimary"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        style="@style/Text.Caption" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding_horizontal_default"
        android:layout_marginRight="@dimen/padding_horizontal_default"
        android:layout_toRightOf="@id/image_profile"
        android:layout_toLeftOf="@id/text_is_attending"
        style="@style/Text.Body" />

</RelativeLayout>