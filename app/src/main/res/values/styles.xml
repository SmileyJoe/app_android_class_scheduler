<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="appBarLayoutStyle">@style/AppTheme.AppBarLayout</item>
<!--        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>-->
        <item name="bottomNavigationStyle">@style/AppTheme.BottomNavigationStyle</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="elevation">0dp</item>
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="Text.Body" parent="TextAppearance.MaterialComponents.Body1"/>

    <style name="Text.Title" parent="TextAppearance.MaterialComponents.Headline5"/>

    <style name="Text.Heading" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Text.Caption" parent="TextAppearance.MaterialComponents.Body2"/>

    <style name="Text.Body.Icon">
        <item name="android:drawablePadding">@dimen/padding_text_icon</item>
        <item name="icon_color">@color/icon</item>
        <item name="icon_placeholder">@drawable/anim_loader</item>
    </style>

    <style name="Text.Title.Icon">
        <item name="android:drawablePadding">@dimen/padding_text_icon</item>
        <item name="icon_color">@color/icon</item>
        <item name="icon_placeholder">@drawable/anim_loader</item>
    </style>

    <style name="Text.Heading.Icon">
        <item name="android:drawablePadding">@dimen/padding_text_icon</item>
        <item name="icon_color">@color/icon</item>
        <item name="icon_placeholder">@drawable/anim_loader</item>
    </style>

    <style name="Text.Caption.Icon">
        <item name="android:drawablePadding">@dimen/padding_text_icon</item>
        <item name="icon_color">@color/icon</item>
        <item name="icon_placeholder">@drawable/anim_loader</item>
    </style>

    <style name="ListItem">
        <item name="android:paddingTop">@dimen/padding_vertical_default</item>
        <item name="android:paddingBottom">@dimen/padding_vertical_default</item>
        <item name="android:paddingLeft">@dimen/padding_horizontal_default</item>
        <item name="android:paddingRight">@dimen/padding_horizontal_default</item>
    </style>

    <style name="Icon">
        <item name="icon_color">@color/icon</item>
        <item name="icon_placeholder">@drawable/anim_loader</item>
    </style>

    <style name="Icon.Schedule.List" parent="Icon">
        <item name="android:layout_width">@dimen/icon_size_schedule_list</item>
        <item name="android:layout_height">@dimen/icon_size_schedule_list</item>
        <item name="android:layout_marginRight">@dimen/padding_horizontal_default</item>
    </style>

<!--    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">-->
<!--        <item name="android:background">?android:colorBackground</item>-->
<!--        <item name="titleTextColor">@color/colorPrimary</item>-->
<!--        <item name="titleCentered">true</item>-->
<!--    </style>-->

    <dimen name="padding_text_icon">5dp</dimen>
</resources>