<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Icon">
        <item name="icon_color">@color/icon</item>
        <item name="icon_placeholder">@drawable/anim_loader_circular</item>
    </style>

    <style name="Icon.Contrast">
        <item name="icon_color">@color/colorOnPrimary</item>
    </style>

    <style name="Icon.Profile" parent="">
        <item name="android:background">@drawable/bg_circle_drawable</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="contentPadding">10dp</item>
        <item name="tint">@color/colorPrimary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Circle</item>
    </style>

    <style name="Icon.Profile.Account">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="Icon.Profile.BottomSheet">
        <item name="android:background">@color/colorPrimary</item>
        <item name="tint">@color/colorOnPrimary</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="Icon.Schedule.List" parent="Icon">
        <item name="android:layout_width">@dimen/icon_size_schedule_list</item>
        <item name="android:layout_height">@dimen/icon_size_schedule_list</item>
        <item name="android:layout_marginRight">@dimen/padding_horizontal_default</item>
    </style>
</resources>